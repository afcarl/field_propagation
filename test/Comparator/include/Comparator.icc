#include "G4MagIntegratorDriver.hh"
#include "StandardDriver.hh"
#include "GustafssonDriver.hh"

template <class TestStepper, class RefStepper>
void Comparator::compare(
        const G4double stepLen, const G4int nSteps, Mode mode)
{
    static const int NCOMP = G4FieldTrack::ncompSVEC;

    G4double yIn[NCOMP], yOut[NCOMP], yErr[NCOMP], dydx[NCOMP];
    G4double yInRef[NCOMP], yOutRef[NCOMP], yErrRef[NCOMP], dydxRef[NCOMP];

    TestStepper testStepper(fTestEquation.get());
    RefStepper refStepper(fRefEquation.get());
    fdiffSteps = 0;

    for (G4int i = 0; i < nSteps; ++i) {
        ftestTrack->DumpToArray(yIn);
        frefTrack->DumpToArray(yInRef);

        testStepper.RightHandSide(yIn, dydx);
        testStepper.Stepper(yIn, dydx, stepLen, yOut, yErr);

        refStepper.RightHandSide(yInRef, dydxRef);
        refStepper.Stepper(yInRef, dydxRef, stepLen, yOutRef, yErrRef);

        ftestTrack->LoadFromArray(yOut, NCOMP);
        frefTrack->LoadFromArray(yOutRef, NCOMP);

        crossCheck (yOut, yOutRef, mode);
    }


    if (mode == Mode::Silent){
        G4cout<<"diffSteps# "<<fdiffSteps<<" maxDiff "<<fmaxDiff<<G4endl;
    }
}

template <class TestDriver, class RefDriver, class Stepper>
void Comparator::compareDriver(G4double length, Mode mode)
{
    static const int NCOMP = G4FieldTrack::ncompSVEC;

    G4double yTest[NCOMP], dydxTest[NCOMP];
    G4double trackLength = 0, htry = length, epsRelMax = fprecision/length, hdid = 0, hnext  = 0;

    G4double yRef[NCOMP], dydxRef[NCOMP];

    Stepper testStepper(fTestEquation.get());
    TestDriver testDriver(fhmin, &testStepper, 6, 1, G4MagInt_Driver::ErrorControlMethod::Standard);

    Stepper refStepper(fRefEquation.get());
    RefDriver refDriver(fhmin, &refStepper, 6, 1, G4MagInt_Driver::ErrorControlMethod::Standard);

    std::ofstream out("steps.txt");

    fdiffSteps = 0;
    while(length > 0) {
        //G4cout << length << G4endl;
        //prepare input array
        ftestTrack->DumpToArray(yTest);
        testDriver.GetStepper()->RightHandSide(yTest, dydxTest);

        frefTrack->DumpToArray(yRef);
        refDriver.GetStepper()->RightHandSide(yRef, dydxRef);

        //do step using test driver
        testDriver.OneGoodStep(yTest, dydxTest, trackLength, htry, epsRelMax, hdid, hnext);

        //do the same step using ref driver to evaluate accuracy
        refDriver.AccurateAdvance(*frefTrack, hdid, epsRelMax, htry);

        out << hdid << G4endl;
        //G4cout << hdid << G4endl;

        length -= hdid;

        //update htry
        htry = std::min(length, hdid);

        ftestTrack->LoadFromArray(yTest, NCOMP);
        frefTrack->DumpToArray(yRef);

        //check results
        crossCheck (yTest, yRef, mode);
    }

    //print statistics
    G4cout <<"TestDriver: \n";
    fTestField->ReportStatistics();
    G4cout <<"RefDriver: \n";
    fRefField->ReportStatistics();


    if (mode == Mode::Silent){
        G4cout<<"diffSteps# "<<fdiffSteps<<" maxDiff "<<fmaxDiff<<G4endl;
    }
}

