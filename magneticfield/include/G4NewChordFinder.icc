inline void G4NewChordFinder::SetFSALIntegrationDriver(G4FSALIntegrationDriver* fsalDriver)
{
  fFSALIntgrDriver= fsalDriver;
}

inline G4FSALIntegrationDriver* G4NewChordFinder::GetFSALIntegrationDriver()
{
  return fFSALIntgrDriver;
}

#include "G4MagIntegratorStepper.hh"
#include "G4VFSALIntegrationStepper.hh"

inline G4EquationOfMotion* G4NewChordFinder::GetEquationOfMotion()
{
  G4EquationOfMotion* pEquation;
  if( fIntgrDriver ) {
     G4MagIntegratorStepper* stepper= fIntgrDriver->GetStepper();
     pEquation = stepper->GetEquationOfMotion();
  } else {
     G4VFSALIntegrationStepper* fsalStepper = fFSALIntgrDriver->GetStepper();
     pEquation = fsalStepper->GetEquationOfMotion();
  }
  return pEquation;
}



